<header class="navbar navbar-default">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "VetPals Data Entry", root_path, id: "logo" %>
			<nav>
				<ul class="nav navbar-nav nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<% if signed_in? %>
						<li><%= link_to "Enter New Participant", newsubject_path %></li>
						<li><%= link_to "Screening Log", screening_log_path %></li>
						<li><%= link_to "View Participants", subjects_path %></li>
						<li id="fat-menu" class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#" >Account <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Profile", user_path(current_user) %></li>
								<li><%= link_to "Settings", edit_user_path(current_user) %></li>
								<li class="divider"></li>
								<li><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></li>
							</ul>
						</li>
						<% if current_user.is? :admin %>
							<li id="fat-menu" class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#" >Admin <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><%= link_to "Users", users_path %></li>
									<li><%= link_to "Race/Gender Table", race_gender_table_path %></li>
									<li><%= link_to "Participant", subjects_path %></li>
									<li><%= link_to "New Follow Up Log", new_follow_up_log_path %></li>
								</ul>
							</li>
						<% end %>
					<% else %>
						<li><%= link_to "Sign in", signin_path %></li>	
					<% end %>	
				</ul>
			</nav>
		</div>
	</div>
</header>