				<ul><li><%= link_to "View Subjects", subjects_path %></li></ul>

			<% else %>
				<ul>
					<li><%= link_to "Create new account", signup_path, class: "btn" %></li>
					<li><%= link_to "Log in", signin_path, class: "btn" %></li>
				</ul>
			<% end %>
		</div>
		<div id="homepage_news">
			<h3 class="center" id="homepage_titles"><b>News</b></h3>
