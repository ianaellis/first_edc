<div class="row">
	<div class="span6 offset3" >
		<h2>Create New Group</h2>
			<center>Here you can create a new group by entering a group size (6-10) and selecting the correct study site.</center>
			<br/>

		<%= form_tag({controller: "subjects", action: "randomize"}, method: "post") do %>
			<div class="span6 offset3 center" style="width:300px; margin:auto;">
				<div>
					Enter Group Size: <%= number_field_tag(:group_size_input)%>
					Select Study Site: <%= select :study_site, {}, [[' ', nil],["1 - Seattle", 1],["2 - Houston", 2],["3 - Cleveland", 3],["4 - Tampa", 4]] %>
					Group Name: <%= text_field_tag(:treatment_group_name) %>
					<%= submit_tag "Randomize", class: "btn btn-large btn-primary", :style => "width:300px" %>
				</div>
			</div>
		<% end %>
	</div>
</div>	