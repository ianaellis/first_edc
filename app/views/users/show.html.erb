<% provide(:title, @user.name) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			<b><%= @user.user_study_site == 1? "Seattle" : @user.user_study_site == 2? "Houston" : @user.user_study_site == 3? "Cleveland" : @user.user_study_site == 4? "Tampa" : @user.user_study_site == 5? "Minneapolis" : "nil"%></b>
			<% @user.roles.each do |role| %>
				| <%= role.camelize %>
			<% end %>
			
			<hr>
		</section>
		<div class="user_profile">
			
			<h2UserProfile>Tools</h2UserProfile></br>
			
			Here you will find links to the various tasks you are allowed access to.
			<ol>
				<li><%= link_to "Add a new Participant", newsubject_path %></li>
				<li><%= link_to "View Screening Log", screening_log_path %></li>
				<li><%= link_to "View Participant", subjects_path %></li>
			</ol>

			<hr>
			<!-- Admin Stuff -->
			<% if current_user.is? :admin %>
				<h2UserProfile>Admin Tools</h2UserProfile>
				
				<p><%= link_to "Screening Data", screening_crf_data_path %></p>
				<p><%= link_to "Screening Data for Tables", screening_view_path%></p>
				<p><%= link_to "Race/Gender Distrubtion Tables", race_gender_table_path%></p>
				
			<% end %>
		</div>
	</aside>
</div>

